<div class="container" style="margin-top: 15px;">
    <div class="col">
        <p class="text-end">Hola {{usuario}} !
            <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar Sesion <i class="fa fa-sign-out"></i></a>
        </p>
    </div>
</div>

<div class="container">

    <div class="col-7">
        <h3>Listado de novedades</h3>
    </div>
    <div class="col text-end">
        <a href="/admin/novedades/agregar" class="btn btn-sm btn-success"><i class="fa fa-plus"></i>Nuevo</a>
    </div>

</div>



<div class="container" style="margin: 50px auto;">
    <div class="col">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titulo</th>
                    <th scope="col">Imagen</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col" class="text-center">Acciones</th>
                </tr>

            </thead>

            <tbody>
                {{#each novedades}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td> {{titulo}} </td>
                    <td> {{{imagen}}} </td>
                    <td> {{descripcion}} </td>
                    <td class="text-center">
                        <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary btn-warning"><i class="fa fa-pencil"></i></a>
                        <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary btn-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>